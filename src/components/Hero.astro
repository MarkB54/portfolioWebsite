---
import { getIcon } from "../utils/iconMapper";

interface Props {
  hero: {
    name: string;
    title: string;
    description: string;

    location?: string;
    socialLinks: Array<{
      url: string;
      icon: string;
      label: string;
    }>;
  };
}

const { hero } = Astro.props;
---

<section id="top" class="hero pt-16 pb-6 px-4">
  <div class="hero-content flex-col max-w-7xl gap-8 lg:gap-12">
    <div class="max-w-2xl text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-4">
        Hi, I'm {hero.name}
      </h1>
      <p class="skeleton skeleton-text text-xl text-base-content/80 mb-2">
        {hero.title}
      </p>
      {
        hero.location && (
          <p class="text-base-content/60 mb-4">{hero.location}</p>
        )
      }
      <p class="text-lg leading-relaxed mb-6">
        {hero.description}
      </p>
      <div
        class="flex flex-wrap justify-center gap-3"
      >
        {
          hero.socialLinks.map((link) => {
            const IconComponent = getIcon(link.icon as any);
            return (
              <div class="tooltip tooltip-top" data-tip={link.label}>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-circle btn-primary lg:btn-ghost"
                  aria-label={link.label}
                >
                  <IconComponent class="size-6" />
                </a>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
