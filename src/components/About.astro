---
import { Plus } from "@lucide/astro";

interface Props {
  title: string;
  Content: any;
  link?: string;
}

const { title, Content, link } = Astro.props;
---

<section id="about" class="py-16 md:py-20 px-2 sm:px-4">
  <div class="w-full max-w-4xl mx-auto">
    <div class="card bg-base-200 shadow-sm">
      <div class="card-body">
        <h2 class="card-title text-2xl">{title}</h2>
        <article
          class="prose prose-sm max-w-none prose-a:text-primary prose-a:underline prose-a:hover:opacity-80"
        >
          <Content />
        </article>
        {
          link && (
            <div class="card-actions justify-center md:justify-end">
              <div class="tooltip" data-tip="More about me">
                <a href={link} target="_blank" class="btn btn-primary">
                  <Plus class="size-5" />
                </a>
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
